    <script>
        // Set current year in footer
        document.getElementById('current-year').textContent = new Date().getFullYear();
        
        // Set minimum date for check-in to today
        const today = new Date().toISOString().split('T')[0];
        document.getElementById('checkin').min = today;
        
        // Initialize bed data
        let beds = [];
        const totalBeds = 30;
        
        // Generate initial bed data (simulating some occupied beds)
        function initializeBeds() {
            beds = [];
            for (let i = 1; i <= totalBeds; i++) {
                // Randomly assign some beds as occupied (for demo)
                const isOccupied = Math.random() > 0.6 && i > 5;
                beds.push({
                    number: i,
                    occupied: isOccupied,
                    lastUpdated: new Date()
                });
            }
            updateBedDisplay();
        }
        
        // Update bed display
        function updateBedDisplay() {
            const bedsContainer = document.getElementById('beds-container');
            bedsContainer.innerHTML = '';
            
            let availableCount = 0;
            
            beds.forEach(bed => {
                if (!bed.occupied) availableCount++;
                
                const bedElement = document.createElement('div');
                bedElement.className = `bed ${bed.occupied ? 'bed-occupied' : 'bed-available'}`;
                bedElement.innerHTML = `
                    <div class="bed-number">${bed.number}</div>
                `;
                
                // Add click event to toggle bed status (for demo purposes)
                bedElement.addEventListener('click', () => {
                    // In a real system, this would be admin-only functionality
                    console.log(`Bed ${bed.number} clicked`);
                });
                
                bedsContainer.appendChild(bedElement);
            });
            
            // Update available beds count
            document.getElementById('available-beds').textContent = `${availableCount} Beds Available`;
            
            // Update status bar color based on availability
            const statusIcon = document.querySelector('.availability-icon');
            if (availableCount > 10) {
                statusIcon.className = 'availability-icon available';
            } else if (availableCount > 0) {
                statusIcon.className = 'availability-icon limited';
            } else {
                statusIcon.className = 'availability-icon full';
            }
            
            // Update time
            const now = new Date();
            const timeString = now.toLocaleTimeString([], {hour: '2-digit', minute:'2-digit'});
            document.getElementById('update-time').textContent = `Today at ${timeString}`;
        }
        
        // Simulate real-time updates (for demo)
        function simulateUpdates() {
            // Randomly change bed status occasionally
            setInterval(() => {
                // Only simulate if we're not in the middle of a booking
                const changeCount = Math.floor(Math.random() * 3); // 0-2 changes
                
                for (let i = 0; i < changeCount; i++) {
                    const randomIndex = Math.floor(Math.random() * totalBeds);
                    // Slight chance to toggle status
                    if (Math.random() > 0.7) {
                        beds[randomIndex].occupied = !beds[randomIndex].occupied;
                        beds[randomIndex].lastUpdated = new Date();
                    }
                }
                
                updateBedDisplay();
            }, 10000); // Update every 10 seconds
        }
        
        // Handle booking form submission
        document.getElementById('bookingForm').addEventListener('submit', function(e) {
            e.preventDefault();
            
            const name = document.getElementById('name').value;
            const bedsRequested = parseInt(document.getElementById('beds').value);
            const availableBeds = beds.filter(bed => !bed.occupied).length;
            
            // Check if enough beds are available
            if (bedsRequested > availableBeds) {
                alert(`Sorry, only ${availableBeds} beds are available. Please adjust your booking.`);
                return;
            }
            
            // In a real system, this would send data to a server
            // For demo, we'll simulate booking by occupying beds
            let bedsBooked = 0;
            for (let i = 0; i < beds.length && bedsBooked < bedsRequested; i++) {
                if (!beds[i].occupied) {
                    beds[i].occupied = true;
                    beds[i].lastUpdated = new Date();
                    bedsBooked++;
                }
            }
            
            updateBedDisplay();
            
            // Show notification
            const notification = document.getElementById('notification');
            notification.textContent = `Booking request for ${bedsRequested} bed(s) submitted successfully!`;
            notification.style.display = 'block';
            notification.style.backgroundColor = '#2ecc71';
            
            setTimeout(() => {
                notification.style.display = 'none';
            }, 5000);
            
            // Reset form
            this.reset();
        });
        
        // Initialize the page
        initializeBeds();
        simulateUpdates();
    </script>
</body>
